
{% contents "cms.contents.default.safety" %}
<div class="container">
	<div class="row">
		<div class="safety">
			<div class="col-md-4">
				<p class="title" style="text-align:left;">{{ content.model.local.excerpt}}</p>
				<div>{{ content.html | raw }}</div>
				<button class="custom-button">
					{{ "About us" | t | link('#about') }}
					{# <web-icon path="mdiDotsVertical"></web-icon> #}
				</button>
			</div>
			<div class="col-md-4">
				<img class="image" src="{{ content.model.attrs.image.url }}"/>
			</div>
		</div>
	</div>
</div>
{% endcontent %}


