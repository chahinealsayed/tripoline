{% contents type="value" %}
<div id="value">
	<div class="row" style="background:#F5F5F5;">
		<p class="title text-center mb-5">{{ "Values" | t }}</p>
		<div class="d-flex gap-5 justify-content-between align-items-start">
			{% for content in contents %}
				<div class="d-flex gap-5 flex-column justify-content-center align-items-center mb-5">
					<div>
						<img src="{{ content.attrs.image.url }}"/>
					</div>
					<div>
						<p class="text text-center">{{ content.local.title| nl2br}}</p>
						<div>
							<web-view blocks="{{ content.local.blocks | json }}"></web-view>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endcontents %}


