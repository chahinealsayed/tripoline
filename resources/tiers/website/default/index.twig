<section class="vision-section" id="vision">
	{{ 'vision-layout' | layoutClass }}
	{% content "cms.contents.default.vision" %}
	<div class="container">
		<div class="section-3 mb-5">
			<div>
				<p class="title" style="font-weight: bold;">
					{{ content.model.local.title| nl2br}}
				</p>
			</div>
			<div>
				<img src="{{ content.model.attrs.image.url }}"/>
			</div>
			<div class="text-center mt-5">{{ content.model.local.excerpt| nl2br}}</div>
		</div>
	</div>
	{% endcontent %}
</section>
{% contents type="value" %}
{% if isMobile() or isTablet() %}
	<section id="value" class="value value-section" style="background:#F5F5F5;" data-aos="zoom-in-up">
		<p class="text text-center pt-5" style="font-weight: bold;">{{ "Values" | t }}</p>
		<div class="swiper">
			<div class="swiper-wrapper">
				{% for content in contents %}
					<div class="swiper-slide">
						<div class="d-flex flex-column justify-content-center align-items-center">
							<img src="{{ content.attrs.image.url }}"/>
							<p class="text text-center">{{ content.local.title }}</p>
							<web-view blocks="{{ content.local.blocks | json }}"></web-view>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="swiper-button-prev"></div>
			<div class="swiper-button-next"></div>
		</div>
	</section>
{% else %}
	<section id="value" class="value value-section" style="background:#F5F5F5;">
		<div class="container" data-aos="zoom-in-up">
			<div class="row">
				<p class="title text-center mb-5 mt-5" style="font-weight: bold;">{{ "Values" | t }}</p>
				<div class="d-flex justify-content-between align-items-start flex-wrap">
					{% for content in contents %}

						<div class="col-12 col-md-2  mb-5">
							<div class="d-flex  flex-column justify-content-center align-items-center">
								<div>
									<img src="{{ content.attrs.image.url }}"/>
								</div>
								<div>
									<p class="text text-center">{{ content.local.title | nl2br }}</p>
									<div>
										<web-view blocks="{{ content.local.blocks | json }}"></web-view>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endif %}
{% endcontents %}

