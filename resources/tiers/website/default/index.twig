{{ "Home" | title }}
{{ seo('home-' ~ language(), this.title, "", [], true) }}


{{ 'safety-layout' | layoutClass }}
<section class='section-1'>
	<div class='container'>
		{% contents type="default.safety" %}
		{% for content in contents %}
			<div class='row' id="link-{{loop.index}}">
				<div class='col col-12 col-md-6' data-aos="fade-up" data-aos-duration="1000">
					{% if loop.first %}
						<div class='img d-flex justify-content-end'>
							<img src='{{ content.attrs.image.url}}'>
						</div>
					{% else %}
						<div class='img'>
							<img src='{{ content.attrs.image.url}}'>
						</div>

					{% endif %}
				</div>
				<div class='col col-12 col-md-6' data-aos="fade-up" data-aos-duration="1000">
					<div class='cont'>
						<h1>{{ content.local.title}}</h1>
						<p>{{ content.local.attrs.description}}</p>
						{% if loop.first %}
							<a href="{{'donation.finance' | setting('#')}}" target="_blank" class="financing-btn scroll-to">{{"Support Now" | t}}
								<web-icon path="mdiDotsVertical"></web-icon>
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% endfor %}
		{% endcontents %}
	</div>
</section>

{% if isMobile() or isTablet() %}
	<section class="section-2" data-aos="fade-up" data-aos-duration="1000">
		<div class="swiper">
			<div class="swiper-wrapper">
				<div class="swiper-slide">
					<img src='public\images\sdg\4.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\8.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\9.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\10.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\11.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\13.svg'>
				</div>
				<div class="swiper-slide">
					<img src='public\images\sdg\17.svg'>
				</div>
			</div>
			<div class="swiper-button-prev"></div>
			<div class="swiper-button-next"></div>
		</div>
	</section>
	<section class="section-5" data-aos="fade-up" data-aos-duration="1000">
		<div class="mb-5 container">
			<p class="title mb-5 text-center">{{ "Our contribution towards the goals of sustainable development"| t }}</p>
			<div class="d-flex align-items-center justify-content-center">
				<a class="financing-btn" href="/Contribution">
					{{ "Read More" | t }}
					<web-icon path="mdiArrow{{ language() == 'ar' ? 'Left' : 'Right' }}"></web-icon>
				</a>
			</div>
		</div>
	</section>
{% else %}
	<section class="section-2">
		<div class="container" data-aos="fade-up" data-aos-duration="1000">
			<div class="row-14">
				<div class="col-7 col-md-4 col-lg-2">
